name:                  gogol-gmail
version:               0.0.1
synopsis:              Google Gmail API Client.
homepage:              https://github.com/brendanhay/gogol
bug-reports:           https://github.com/brendanhay/gogol/issues
license:               OtherLicense
license-file:          LICENSE
author:                Brendan Hay
maintainer:            Brendan Hay <brendan.g.hay@gmail.com>
copyright:             Copyright (c) 2015 Brendan Hay
category:              Network, Google, Cloud
build-type:            Simple
cabal-version:         >= 1.10
extra-source-files:    README.md

description:
    The Gmail REST API.
    .
    /Warning:/ This is an experimental prototype/preview release which is still
    under exploratory development and not intended for public use, caveat emptor!

source-repository head
    type:     git
    location: git://github.com/brendanhay/gogol.git

library
    default-language:  Haskell2010
    hs-source-dirs:    src gen

    ghc-options:       -Wall

    exposed-modules:
          Network.Google.API.Gmail.Users.Drafts.Create
        , Network.Google.API.Gmail.Users.Drafts.Delete
        , Network.Google.API.Gmail.Users.Drafts.Get
        , Network.Google.API.Gmail.Users.Drafts.List
        , Network.Google.API.Gmail.Users.Drafts.Send
        , Network.Google.API.Gmail.Users.Drafts.Update
        , Network.Google.API.Gmail.Users.History.List
        , Network.Google.API.Gmail.Users.Labels.Create
        , Network.Google.API.Gmail.Users.Labels.Delete
        , Network.Google.API.Gmail.Users.Labels.Get
        , Network.Google.API.Gmail.Users.Labels.List
        , Network.Google.API.Gmail.Users.Labels.Patch
        , Network.Google.API.Gmail.Users.Labels.Update
        , Network.Google.API.Gmail.Users.Messages.Attachments.Get
        , Network.Google.API.Gmail.Users.Threads.Delete
        , Network.Google.API.Gmail.Users.Threads.Get
        , Network.Google.API.Gmail.Users.Threads.List
        , Network.Google.API.Gmail.Users.Threads.Modify
        , Network.Google.API.Gmail.Users.Threads.Trash
        , Network.Google.API.Gmail.Users.Threads.Untrash
        , Network.Google.Gmail
        , Network.Google.Gmail.Types

    other-modules:
          Network.Google.Gmail.Types.Product
        , Network.Google.Gmail.Types.Sum

    build-depends:
          gogol-core == 0.0.1.*
        , base       >= 4.7 && < 5
